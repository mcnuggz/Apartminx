@model IEnumerable<Apartment.Models.ApartmentAddress>

@{
    ViewBag.Title = "Index";
}
<legend class="legend">Apartment @ViewBag.Title</legend>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentCostId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomCountId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BathCountId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Availability)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentCost.RentAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomCount.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BathCount.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @if (item.Availability == true)
            {
                <p>Yes</p>
            }
            else
            {
                <p>No</p>
            }
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                <ul class="list-inline">
                    <li>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    </li>
                    <li>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    </li>
                    <li>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </li>
                </ul>
            }
            @if (User.IsInRole("Landlord"))
            {
                <ul class="list-inline">
                    <li>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    </li>
                    <li>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </li>
                </ul>

            }

        </td>
    </tr>
}

</table>
