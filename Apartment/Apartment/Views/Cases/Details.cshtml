@model Apartment.Models.Case

@{
    ViewBag.Title = "Details";
}

<legend class="legend">@ViewBag.Title</legend>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ApplicationFilled)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplicationFilled)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BackgroundStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BackgroundStatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreditReportStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreditReportStatus)
        </dd>


        @if (Model.LeasePath == null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.LeaseSigned)
            </dt>
            <dd>
                @if (Model.LeaseSigned == false)
                {
                    <p>No</p>
                }
            </dd>
        }
        else
        {
            <dt>
                @Html.DisplayNameFor(model => model.LeasePath)
            </dt>
            <dd>
                <p><a href="@Model.LeasePath" download>Lease</a></p>
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
