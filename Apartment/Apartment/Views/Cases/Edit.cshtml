@model Apartment.Models.Case

@{
    ViewBag.Title = "Edit";
}
<legend class="legend">@ViewBag.Title Tenant Cases</legend>

@using (Html.BeginForm("Edit", "Cases", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ApplicationFilled, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                <div class="checkbox" id="checkBox">
                    @Html.CheckBoxFor(model => model.ApplicationFilled)
                    @Html.ValidationMessageFor(model => model.ApplicationFilled, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BackgroundStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                <div class="checkbox" id="checkBox">
                    @Html.CheckBoxFor(model => model.BackgroundStatus)
                    @Html.ValidationMessageFor(model => model.BackgroundStatus, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CreditReportStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                <div class="checkbox" id="checkBox">
                    @Html.CheckBoxFor(model => model.CreditReportStatus)
                    @Html.ValidationMessageFor(model => model.CreditReportStatus, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LeaseSigned, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                <div class="checkbox" id="checkBox">
                    @Html.CheckBoxFor(model => model.LeaseSigned)
                    @Html.ValidationMessageFor(model => model.LeaseSigned, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LeasePath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                <input type="file" name="file" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.EnumDropDownListFor(m => m.Status)
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-9">
                <input type="submit" value="Update" class="btn btn-success btn-lg" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Cases")"><input class="btn btn-primary btn-lg" value="<< Back to List" /></a>
</div>
