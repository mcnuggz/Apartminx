@model Apartment.Models.CreditHistory

@{
    ViewBag.Title = "Create";
}

<legend class="legend">Credit History</legend>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="well well-lg">
            <fieldset class="editor">
                @Html.LabelFor(m => m.BankName)
                @Html.TextBoxFor(m => m.BankName)
                @Html.ValidationMessageFor(model => model.BankName, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(m => m.City)
                @Html.TextBoxFor(m => m.City)
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.State)
                @Html.EnumDropDownListFor(model => model.State, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
            </fieldset>                
            <fieldset class="editor">
                @Html.LabelFor(m => m.SocialSecurity)
                @Html.TextBoxFor(m => m.SocialSecurity)
                @Html.ValidationMessageFor(model => model.SocialSecurity, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                    @Html.LabelFor(model => model.OtherComments)
                    @Html.TextAreaFor(model => model.OtherComments, 3, 28, new { style = "margin-left: 20px;" })
                    @Html.ValidationMessageFor(model => model.OtherComments, "", new { @class = "text-danger" })
            </fieldset>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Continue" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}
@if (User.IsInRole("Admin") || User.IsInRole("Landlord"))
{
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}