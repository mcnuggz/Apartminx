@model Apartment.Models.CriminalHistory

@{
    ViewBag.Title = "Create";
}

<legend class="legend">Criminal/Rental History</legend>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="well well-lg">
            <fieldset class="editor">
                @Html.LabelFor(model => model.Evicted)
                @Html.CheckBoxFor(model => model.Evicted, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.Evicted, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.EarlyMoveOut)
                @Html.CheckBoxFor(model => model.EarlyMoveOut, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.EarlyMoveOut, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.Bankrupt)
                @Html.CheckBoxFor(model => model.Bankrupt, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.Bankrupt, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.SuedForRent)
                @Html.CheckBoxFor(model => model.SuedForRent, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.SuedForRent, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.SuedForDamage)
                @Html.CheckBoxFor(model => model.SuedForDamage, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.SuedForDamage, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.RegisteredSexOffender)
                @Html.CheckBoxFor(model => model.RegisteredSexOffender, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.RegisteredSexOffender, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.ArrestedForViolence)
                @Html.CheckBoxFor(model => model.ArrestedForViolence, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.ArrestedForViolence, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.ArrestedForFelony)
                @Html.CheckBoxFor(model => model.ArrestedForFelony, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.ArrestedForFelony, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.ArrestInformation)
                @Html.TextAreaFor(model => model.ArrestInformation, 3, 28, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.ArrestInformation, "", new { @class = "text-danger" })
            </fieldset>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Continue" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}
@if (User.IsInRole("Admin") || User.IsInRole("Landlord"))
{
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}