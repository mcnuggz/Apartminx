            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.State2)
                @Html.EnumDropDownListFor(model => model.State2, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.State2, "", new { @class = "text-danger" })
            </fieldset>
        </div>

