                @Html.ValidationMessageFor(model => model.VehilceDescription, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.Year)
                @Html.TextBoxFor(model => model.Year, new { style = "width: 75px;" })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.LicenseNum)
                @Html.TextBoxFor(model => model.LicenseNum)
                @Html.ValidationMessageFor(model => model.LicenseNum, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.State)
                @Html.EnumDropDownListFor(model => model.State, new { style = "margin-left: 20px; width: auto; line-height: 1em;" })
