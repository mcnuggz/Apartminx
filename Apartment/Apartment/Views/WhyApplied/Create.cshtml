@model Apartment.Models.WhyApplied

@{
    ViewBag.Title = "Create";
}
<legend class="legend">Referrals</legend>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="well well-lg">
            <fieldset class="editor">
                @Html.LabelFor(model => model.WasReferred)
                @Html.CheckBoxFor(model => model.WasReferred, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.WasReferred, "", new { @class = "text-danger" })
            </fieldset>

            <hr />
            <div class="subFieldset">
                <fieldset class="editor">
                    @Html.LabelFor(model => model.RentalAgency)
                    @Html.TextBoxFor(model => model.RentalAgency)
                    @Html.ValidationMessageFor(model => model.RentalAgency, "", new { @class = "text-danger" })
                </fieldset>
                <fieldset class="editor">
                    @Html.LabelFor(model => model.LocalAgency)
                    @Html.TextBoxFor(model => model.LocalAgency)
                    @Html.ValidationMessageFor(model => model.LocalAgency, "", new { @class = "text-danger" })
                </fieldset>
                <fieldset class="editor">
                    @Html.LabelFor(model => model.OtherPerson)
                    @Html.TextBoxFor(model => model.OtherPerson)
                    @Html.ValidationMessageFor(model => model.OtherPerson, "", new { @class = "text-danger" })
                </fieldset>
            </div>

            <hr />
            <fieldset class="editor">
                @Html.LabelFor(model => model.OnInternet)
                @Html.CheckBoxFor(model => model.OnInternet, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.OnInternet, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="editor">
                @Html.LabelFor(model => model.StoppedBy)
                @Html.CheckBoxFor(model => model.StoppedBy, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.StoppedBy, "", new { @class = "text-danger" })
            </fieldset>
            <hr/>
            <fieldset class="editor">
                @Html.LabelFor(model => model.Newspaper)
                @Html.CheckBoxFor(model => model.Newspaper, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.Newspaper, "", new { @class = "text-danger" })
            </fieldset>
            <div class="subFieldset">
                <fieldset class="editor">
                    @Html.LabelFor(model => model.NewspaperName)
                    @Html.TextBoxFor(model => model.NewspaperName)
                    @Html.ValidationMessageFor(model => model.NewspaperName, "", new { @class = "text-danger" })
                </fieldset>
            </div>
            <br />
            <fieldset class="editor">
                @Html.LabelFor(model => model.RentalPublication)
                @Html.CheckBoxFor(model => model.RentalPublication, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.RentalPublication, "", new { @class = "text-danger" })
            </fieldset>
            <div class="subFieldset">
                <fieldset class="editor">
                    @Html.LabelFor(model => model.PublicaitonName)
                    @Html.TextBoxFor(model => model.PublicaitonName)
                    @Html.ValidationMessageFor(model => model.PublicaitonName, "", new { @class = "text-danger" })
                </fieldset>
            </div>

            <hr />
            <fieldset class="editor">
                @Html.LabelFor(model => model.OtherDetails)
                @Html.TextAreaFor(model => model.OtherDetails, 3, 28, new { style = "margin-left: 20px;" })
                @Html.ValidationMessageFor(model => model.OtherDetails, "", new { @class = "text-danger" })
            </fieldset>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Continue" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}

